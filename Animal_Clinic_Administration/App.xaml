<Application x:Class="Animal_Clinic_Administration.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Animal_Clinic_Administration"
             xmlns:viewmodel="clr-namespace:Animal_Clinic_Administration.ViewModels"
              StartupUri="View/MainWindow.xaml" >
    
    
    <Application.Resources> 
        <ResourceDictionary> 
            <DataTemplate   DataType="{x:Type viewmodel:EditViewModel}">
                <local:UserControl1/>
            </DataTemplate>

            <DataTemplate  DataType="{x:Type viewmodel:AddViewModel}">
                <local:UserControl2/>
            </DataTemplate> 
        </ResourceDictionary>  
    </Application.Resources> 
</Application>
             
 
